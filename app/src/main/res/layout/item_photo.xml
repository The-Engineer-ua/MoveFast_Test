<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtProfile"
        style="@style/Custom.Text.Header.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintBottom_toBottomOf="@id/imgProfile"/>
    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginVertical="10dp"
        android:contentDescription="@string/image_thumbnail_description"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        />
    <TextView
        android:id="@+id/txtProfileSub"
        style="@style/Custom.Text.Header.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgThumbnail"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtDescription"
        style="@style/Custom.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtProfileSub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgLike"/>

    <TextView
        android:id="@+id/txtLikes"
        style="@style/Custom.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgThumbnail"/>

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_star"
        android:clickable="true"
        android:contentDescription="@string/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/imgLike"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_heart"
        android:contentDescription="@string/likes_icon"
        app:layout_constraintEnd_toStartOf="@id/txtLikes"
        app:layout_constraintTop_toTopOf="@id/txtLikes"
        app:layout_constraintBottom_toBottomOf="@id/txtLikes"/>

</androidx.constraintlayout.widget.ConstraintLayout>